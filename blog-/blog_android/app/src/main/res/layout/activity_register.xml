<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context="com.example.activity.RegisterActivity">
    <ImageView
        android:layout_above="@id/reg_users"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:background="@mipmap/moonker"
        android:layout_width="140dp"
        android:layout_height="140dp" />

    <RelativeLayout
        android:id="@+id/reg_users"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/reg_username_register"
            android:hint="username"
            android:textColorHint="#778899"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/reg_password_register"
            android:hint="password"
            android:textColorHint="#778899"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/reg_email_register"
            android:hint="email"
            android:textColorHint="#778899"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_below="@id/reg_users"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"
        android:text="注册"
        android:layout_width="110dp"
        android:layout_height="50dp" />
</RelativeLayout>
