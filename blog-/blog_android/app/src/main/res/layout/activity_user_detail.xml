<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.activity.UserDetailActivity">
    <TextView
        android:id="@+id/ud_a_block1"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/ud_a_et_user_nickname"
        android:layout_below="@id/ud_a_block1"
        android:text="nickname"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/ud_a_block2"
        android:layout_below="@id/ud_a_et_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/ud_a_et_user_introduction"
        android:layout_below="@id/ud_a_block2"
        android:text="introduction"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <Button
        android:id="@+id/ud_a_btn_edit"
        android:text="@string/finish"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="70dp" />
</RelativeLayout>
