<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context="com.example.activity.LoginActivity">


    <ImageView
        android:layout_above="@id/users"
        android:layout_centerHorizontal="true"
        android:layout_margin="90dp"
        android:background="@mipmap/moonker"
        android:layout_width="140dp"
        android:layout_height="140dp" />

    <RelativeLayout
        android:id="@+id/users"
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/edit_username_login"
            android:hint="username"
            android:textColorHint="#778899"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/edit_password_login"
            android:hint="password"
            android:textColorHint="#778899"
            android:inputType="textPassword"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/users"
        android:layout_centerHorizontal="true"
        android:layout_margin="100dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_login"
            android:text="登录"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnJ_register"
            android:text="注册"
            android:layout_width="100dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>